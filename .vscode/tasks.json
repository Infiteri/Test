{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "${workspaceFolder}/Build.bat",
      "label": "Build",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "command": "${workspaceFolder}/Bin/Editor.exe",
      "label": "Run Editor",
      "problemMatcher": [],
      "group": {
        "kind": "run"
      }
    },
    {
      "type": "shell",
      "command": "${workspaceFolder}/CleanBuild.bat",
      "label": "Build Clean",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    }
  ]
}
